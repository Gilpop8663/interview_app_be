{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "preset": "jest-puppeteer",
  "setupFilesAfterEnv": [
    "<rootDir>/jest.setup.ts",
    "<rootDir>/01-users.e2e-spec.ts",
    "<rootDir>/02-products.e2e-spec.ts",
    "<rootDir>/03-orders.e2e-spec.ts",
    "<rootDir>/04-payments.e2e-spec.ts"
  ]
}
